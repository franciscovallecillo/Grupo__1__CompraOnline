<!DOCTYPE html>
<html lang="es">
<%- include('./partials/head.ejs') %>
<body>
    <%- include('./partials/primerDivGeneral.ejs') %>
    
    <hr id="separador">
    <br>
    
    <div class="container">
        <form class="row">

            <div class="form-group text-center col-12">
                <h1 class="">Tus Datos</h1>
            </div>

            <!-- Datos de la cuenta -->
            <div class="form-group col-12">
              <h2 class="">Datos de la Cuenta</h2>
            </div>
            <div class="form-inline form-group col-6 d-flex">
              <label class="col-auto" for="userName">Nombre de Usuario: </label>
              <div class="input-group flex-fill">
                <div class="input-group-prepend">
                  <span class="input-group-text" id="basic-addon1">@</span>
                </div>
                <input type="text" class="form-control" placeholder="Username" aria-label="Username" aria-describedby="basic-addon1">
              </div>
            </div>
            <div class="form-inline form-group col-6 d-flex">
              <label class="col-auto" for="emailUser">E-mail: </label>
              <input type="email" class="form-control flex-fill" id="emailUser" placeholder="name@example.com">
            </div>
            <div class="form-inline form-group d-flex col-6">
              <label for="changePassword" class="col-auto">Cambiar Contraseña: </label>
              <input type="password" class="form-control col-auto flex-fill" id="changePassword">
            </div>
            <div class="form-inline form-group d-flex col-6">
              <label for="repeatPassword" class="col-auto">Reescribir Contraseña: </label>
              <input type="password" class="form-control col-auto flex-fill" id="repeatPassword">
            </div>
            <div class="form-inline form-group d-flex ml-auto">
              <button type="submit" class="btn btn-dark form-control">Guardar</button>
            </div>
        </form>

        <form class="row">
            <!-- Datos personales -->
            <div class="form-group col-12 mt-4">
              <h2 class="">Datos Personales</h2>
            </div>
            <div class="form-inline form-group col-6 d-flex">
              <label class="col-auto" for="nameUser">Nombre(s): </label>
              <input type="text" class="form-control flex-fill" id="nameUser" placeholder="Nombre de Usuario">
            </div>
            <div class="form-inline form-group col-6 d-flex">
              <label class="col-auto" for="lastNameUser">Apellido(s): </label>
              <input type="text" class="form-control flex-fill" id="lastNameUser" placeholder="Apellido de Usuario">
            </div>
            <div class="form-inline form-group col-6 d-flex">
              <label class="col-auto" for="dniUser">DNI: </label>
              <input type="text" class="form-control flex-fill" id="dniUser" placeholder="Número de Documento">
            </div>
            <div class="form-inline form-group col-6 d-flex">
              <label class="col-auto" for="phoneUser">Teléfono: </label>
              <input type="tel" class="form-control flex-fill" id="phoneUser" placeholder="11 1234-5678">
            </div>
            <!-- Direccion -->
            <div class="form-inline form-group col-4 d-flex">
              <label class="col-auto" for="inputAddress">Dirección: </label>
              <input type="text" class="form-control flex-fill" id="inputAddress" placeholder="Calle Falsa">
            </div>
            <div class="form-inline form-group col-4 d-flex">
              <label class="col-auto" for="inputAddress2">Altura: </label>
              <input type="text" class="form-control flex-fill" id="inputAddress2" placeholder="123">
            </div>
            <div class="form-inline form-group col-4 d-flex">
              <label class="col-auto" for="inputAddress3">Piso/Dpto: </label>
              <input type="text" class="form-control flex-fill" id="inputAddress3" placeholder="1/A">
            </div>

              <div class="form-inline form-group col-5 d-flex">
                <label class="col-auto" for="inputCity">Ciudad: </label>
                <input type="text" class="form-control flex-fill" id="inputCity">
              </div>
              <div class="form-inline form-group col-4 d-flex">
                <label class="col-auto" for="inputState">Provincia: </label>
                <select id="inputState" class="form-control flex-fill">
                  <option selected>Seleccionar...</option>
                  <option>...</option>
                  <option>...</option>
                  <option>...</option>
                </select>
              </div>
              <div class="form-inline form-group col-3 d-flex">
                <label class="col-4" for="inputZip">CP: </label>
                <input type="text" class="form-control col-8" id="inputZip">
              </div>
              <div class="form-inline form-group d-flex ml-auto">
                <button type="submit" class="btn btn-dark form-control">Guardar</button>
              </div>

          </form>

          <form class="row">

            <!-- Datos de las tarjetas -->
            <div class="form-group col-12">
              <h2 class="">Tarjetas del Usuario</h2>
            </div>
            <div class="form-inline form-group col-6 d-flex">
              <label class="col-auto" for="nameCard">Nombre del titular de la tarjeta: </label>
              <input type="text" class="form-control flex-fill" id="nameCard" placeholder="Nombre Completo del Titular">
            </div>
            <div class="form-inline form-group col-6 d-flex">
              <label class="col-auto" for="dniCard">DNI del titular de la tarjeta: </label>
              <input type="text" class="form-control flex-fill" id="dniCard" placeholder="Número de Documento">
            </div>
            <div class="form-inline form-group col-6 d-flex">
              <label class="col-auto" for="creditCardUser">Tarjeta: </label>
              <input type="text" class="form-control flex-fill" id="creditCardUser" placeholder="Visa - Mastercard">
            </div>
            <div class="form-inline form-group col-6 d-flex">
              <label class="col-auto" for="numCreditCardUser">N° de Tarjeta: </label>
              <input type="text" class="form-control flex-fill" id="numCreditCardUser" placeholder="xxxx-xxxx-xxxx-xxxx">
            </div>
            <div class="form-inline form-group col-6 d-flex">
              <label class="col-auto" for="expire">Fecha de Vencimiento: </label>
              <input type="month" class="form-control flex-fill" id="expire">
            </div>
            <div class="form-inline form-group d-flex col-6">
              <label for="code" class="col-auto">Codigo de Seguridad: </label>
              <input type="password" class="form-control col-auto flex-fill" id="code" placeholder="***">
            </div>
            <div class="form-inline form-group d-flex ml-auto">
              <button type="submit" class="btn btn-dark form-control">Guardar</button>
            </div>
        </form>
    </div>
    
    <%- include('./partials/footer.ejs') %>

    <%- include('./partials/scriptBootstrap.ejs') %>
    
</body>
</html>