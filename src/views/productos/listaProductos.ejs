

<!DOCTYPE html>

<html lang="es">

  <%- include('../partials/head.ejs') %>

<body>

  <%- include('../partials/primerDivGeneral.ejs') %>

  <hr id="separador">


    
  
    <div class="container-fluid">

      <div class="row" class="segmentoPadre">

        <div class="col-12">
          <% if(productos[0].categoria==="Nene") { %>
            <h1 class="col-12 text-center tituloCategoria">Nenes</h1>
          <% } else { %>
            <h1 class="col-12 text-center tituloCategoria"><%= productos[0].categoria %></h1>
          <% } %>
          <nav class="col-12 nav d-block d-lg-none d-flex justify-content-around">
            <a class="nav-link navegador" href="/detalleProducto/categoria/mujer">Mujer</a>
            <a class="nav-link navegador" href="/detalleProducto/categoria/hombre">Hombre</a>
            <a class="nav-link navegador" href="/detalleProducto/categoria/nene">Nenes</a>
            <a class="nav-link navegador" href="/detalleProducto/categoria/accesorios">Accesorios</a>
          </nav>
        </div>

        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 m-0">

            <% for ( let i = 0; i <productos.length ; i++ ) { %>
              <div>
                <div id="producto" class="card segmentoHijoo m-3">
                  <img src="/imagenesProdCargados/<%= productos[i].imagen%>" class="card-img-top" alt="...">
                  <div class="card-body d-flex flex-column">
                      <h5 class="card-title tituloCategoria"><%= productos[i].marca%></h5>
                      <p class="card-text"><%= productos[i].resumen%></p>
                      <p class="card-text text-right">$ <%=  productos[i].precio%></p>
                      <div class="d-flex justify-content-center align-items-center mt-auto">
                        <a href="/detalleProducto/<%=productos[i].product_id %>" class="btn btn-dark">Ver Producto</a>
                      </div>
                  </div>
                </div>
              </div>
            <% } %>

        </div>

      </div>

    </div>
        

<%- include('../partials/footer.ejs') %>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>

</body>
</html>