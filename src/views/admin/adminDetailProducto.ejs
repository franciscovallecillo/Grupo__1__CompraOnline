<!DOCTYPE html>
<html lang="es">
<%- include('../partials/head.ejs') %>
<body>
    <%- include('../partials/primerDivGeneral.ejs') %>

    <hr id="separador">
        
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <ul class="list-group">
                        <li class="list-group-item">Marca: <%= productosUsuario[0].marca%></li>
                        <li class="list-group-item">Modelo: <%= productosUsuario[0].modelo%></li>
                        <li class="list-group-item">Producto: <%= productosUsuario[0].producto%></li>
                        <li class="list-group-item">Temporada: <%= productosUsuario[0].temporada%></li>
                        <li class="list-group-item">Genero: <%= productosUsuario[0].genero%></li>
                        <li class="list-group-item">Talle: <%= productosUsuario[0].talle%></li>
                        <li class="list-group-item">Color: <%= productosUsuario[0].color%></li>
                        <li class="list-group-item">Precio: <%= productosUsuario[0].precio%></li>
                        <li class="list-group-item">Cantidad: <%= productosUsuario[0].cantidad%></li>
                        <li class="list-group-item">Resumen: <%= productosUsuario[0].resumen%></li>
                        <li class="list-group-item">Descripcion: <%= productosUsuario[0].descripcion%></li>
                        <li class="list-group-item ">Imagen: <img class="img-thumbnail" src="/imagenesProdCargados/<%= productosUsuario[0].imagen%>" alt=""></li>
                        <li class="list-group-item">Aceptacion: <%= productosUsuario[0].aceptacion%></li>
                    </ul>
                
                    <a class="btn btn-danger" href="/misProductos"><h4 class="text-center">Volver</h4></a>
                </div>
            </div>
        </div>
    </div>

    <%- include('../partials/footer.ejs') %>

    <%- include('../partials/scriptBootstrap.ejs') %>


</body>
</html>