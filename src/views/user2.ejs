<!DOCTYPE html>
<html lang="es">
<%- include('./partials/head.ejs') %>
<body>
    <%- include('./partials/primerDivGeneral.ejs') %>
    
    <hr id="separador">
        
    <div class="container">
        <form class="row">

            <div class="form-group text-center col-12">
                <h1 class="fuenteformtit">Tus Datos</h1>
            </div>

            <!-- Datos de la cuenta -->
            <div class="form-group col-12">
              <h2 class="fuenteformsub">Datos de la Cuenta</h2>
            </div>
            <div class="form-inline form-group col-12 col-md-6 d-flex">
              <label class="col-auto" for="userName">Nombre de Usuario: </label>
              <div class="input-group flex-fill">
                <div class="input-group-prepend">
                  <span class="input-group-text fuenteform" id="basic-addon1">@</span>
                </div>
                <input type="text" class="form-control fuenteform" placeholder="Usuario" aria-label="Username" aria-describedby="basic-addon1">
              </div>
            </div>
            <div class="form-inline form-group col-12 col-md-6 d-flex">
              <label class="col-auto fuenteform" for="emailUser">E-mail: </label>
              <input type="email" class="form-control flex-fill fuenteform" id="emailUser" placeholder="email@ejemplo.com">
            </div>
            <div class="form-inline form-group d-flex col-12 col-md-6">
              <label for="changePassword" class="col-auto fuenteform">Cambiar Contraseña: </label>
              <input type="password" class="form-control fuenteform col-auto flex-fill" id="changePassword">
            </div>
            <div class="form-inline form-group d-flex col-12 col-md-6">
              <label for="repeatPassword" class="col-auto fuenteform">Reescribir Contraseña: </label>
              <input type="password" class="form-control fuenteform col-auto flex-fill" id="repeatPassword">
            </div>
            <div class="form-inline form-group d-flex ml-auto">
              <button type="submit" class="btn btn-dark form-control fuenteform">Guardar</button>
            </div>
        </form>

        <form class="row">
            <!-- Datos personales -->
            <div class="form-group col-12 mt-4">
              <h2 class="fuenteformsub">Datos Personales</h2>
            </div>
            <div class="form-inline form-group col-12 col-md-6 d-flex">
              <label class="col-auto fuenteform" for="nameUser">Nombre(s): </label>
              <input type="text" class="form-control fuenteform flex-fill" id="nameUser" placeholder="Nombre de Usuario">
            </div>
            <div class="form-inline form-group col-12 col-md-6 d-flex">
              <label class="col-auto fuenteform" for="lastNameUser">Apellido(s): </label>
              <input type="text" class="form-control fuenteform flex-fill" id="lastNameUser" placeholder="Apellido de Usuario">
            </div>
            <div class="form-inline form-group col-12 col-md-6 d-flex">
              <label class="col-auto fuenteform" for="dniUser">DNI: </label>
              <input type="text" class="form-control fuenteform flex-fill" id="dniUser" placeholder="Número de Documento">
            </div>
            <div class="form-inline form-group col-12 col-md-6 d-flex">
              <label class="col-auto fuenteform" for="phoneUser">Teléfono: </label>
              <input type="tel" class="form-control fuenteform flex-fill" id="phoneUser" placeholder="11 1234-5678">
            </div>
            <!-- Direccion -->
            <div class="form-inline form-group col-12 col-md-4 d-flex">
              <label class="col-auto fuenteform" for="inputAddress">Dirección: </label>
              <input type="text" class="form-control fuenteform flex-fill" id="inputAddress" placeholder="Calle Falsa">
            </div>
            <div class="form-inline form-group col-12 col-md-4 d-flex">
              <label class="col-auto fuenteform" for="inputAddress2">Altura: </label>
              <input type="text" class="form-control fuenteform flex-fill" id="inputAddress2" placeholder="123">
            </div>
            <div class="form-inline form-group col-12 col-md-4 d-flex">
              <label class="col-auto fuenteform" for="inputAddress3">Piso/Dpto: </label>
              <input type="text" class="form-control fuenteform flex-fill" id="inputAddress3" placeholder="1/A">
            </div>

              <div class="form-inline form-group col-12 col-md-5 d-flex">
                <label class="col-auto fuenteform" for="inputCity">Ciudad: </label>
                <input type="text" class="form-control fuenteform flex-fill" id="inputCity">
              </div>
              <div class="form-inline form-group col-12 col-md-4 d-flex">
                <label class="col-auto fuenteform" for="inputState">Provincia: </label>
                <select id="inputState" class="form-control fuenteform flex-fill">
                  <option selected>Seleccionar...</option>
                  <option>...</option>
                  <option>...</option>
                  <option>...</option>
                </select>
              </div>
              <div class="form-inline form-group col-12 col-md-3 d-flex">
                <label class="col-4 fuenteform" for="inputZip">CP: </label>
                <input type="text" class="form-control fuenteform col-8" id="inputZip">
              </div>
              <div class="form-inline form-group d-flex ml-auto">
                <button type="submit" class="btn btn-dark fuenteform form-control">Guardar</button>
              </div>

          </form>

          <form class="row">

            <!-- Datos de las tarjetas -->
            <div class="form-group col-12">
              <h2 class="fuenteformsub">Tarjetas del Usuario</h2>
            </div>
            <div class="form-inline form-group col-12 col-md-6 d-flex">
              <label class="col-auto fuenteform" for="nameCard">Nombre del titular de la tarjeta: </label>
              <input type="text" class="form-control fuenteform flex-fill" id="nameCard" placeholder="Nombre Completo del Titular">
            </div>
            <div class="form-inline form-group col-12 col-md-6 d-flex">
              <label class="col-auto fuenteform" for="dniCard">DNI del titular de la tarjeta: </label>
              <input type="text" class="form-control fuenteform flex-fill" id="dniCard" placeholder="Número de Documento">
            </div>
            <div class="form-inline form-group col-12 col-md-6 d-flex">
              <label class="col-auto fuenteform" for="creditCardUser">Tarjeta: </label>
              <input type="text" class="form-control fuenteform flex-fill" id="creditCardUser" placeholder="Visa - Mastercard">
            </div>
            <div class="form-inline form-group col-12 col-md-6 d-flex">
              <label class="col-auto fuenteform" for="numCreditCardUser">N° de Tarjeta: </label>
              <input type="password" class="form-control fuenteform flex-fill" id="numCreditCardUser" placeholder="xxxx-xxxx-xxxx-xxxx">
            </div>
            <div class="form-inline form-group col-12 col-md-6 d-flex">
              <label class="col-auto fuenteform" for="expire">Fecha de Vencimiento: </label>
              <input type="month" class="form-control fuenteform flex-fill" id="expire">
            </div>
            <div class="form-inline form-group d-flex col-12 col-md-6">
              <label for="code" class="col-auto fuenteform">Codigo de Seguridad: </label>
              <input type="password" class="form-control fuenteform col-auto flex-fill" id="code" placeholder="***">
            </div>
            <div class="form-inline form-group d-flex ml-auto">
              <button type="submit" class="btn btn-dark fuenteform form-control">Guardar</button>
            </div>
        </form>
    </div>
    
    <%- include('./partials/footer.ejs') %>

    <%- include('./partials/scriptBootstrap.ejs') %>
    
</body>
</html>